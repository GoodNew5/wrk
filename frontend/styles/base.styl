// base styles

$fa-font-path = '../font-awesome'
@import '../../node_modules/fa-stylus/fa-stylus/index.styl'
// npm i fa-stylus

font-face('GothaProLig')
font-face('GothaProBol')

*
	padding unset 
	margin unset
	box-sizing border-box

$inputBaseDisabledBorder = #D8D8D8
$disabled = #D8D8D8

html
	font-size 14px
html,body
	height 100%
a
	text-decoration none

button, input
	outline none
img
	max-width 100%
table
	width 100%

body
	overflow-y scroll
	min-width 1200px
	font-family: 'GothaProLig'


button
	&:disabled
		pointer-events none
		box-shadow none
		border none
		&:before
			position absolute
			width 100%
			height 100%
			background-color alpha(white, .5)
			content ''
			left 0
			top 0
			display block



input[type="text"]
	&:disabled
		background-color white
		pointer-events none
		border-color  $inputBaseDisabledBorder


input[type=checkbox]:disabled + label, input[type=radio]:disabled + label
	color $disabled
	pointer-events none
input[type=checkbox]:disabled + label:before, input[type=radio]:disabled + label:before
	border-color $disabled



.wrapper
	margin auto
	width 1150px

