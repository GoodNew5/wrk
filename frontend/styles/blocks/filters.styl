.filters
	padding  20px 18px 20px 18px
	border 1px #EAF1F6 solid
	border-radius 5px
	position relative
	&__item
		margin-bottom 22px

.filter-title
	text-transform uppercase
	margin-top 20px
	margin-bottom 12px
	font-weight bold
	color $mainTypoColor
	font-size 15px
	@extend $bold
.filter-cycle
	margin-top 7px
	color $grayLight
	display flex
	justify-content space-between