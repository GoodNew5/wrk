.irs-from, .irs-to, .irs-single
	background transparent
	color $gray
	visibility visible !important
	padding 0
.irs-min, .irs-max
	visibility hidden !important
.irs-slider
	box-shadow none
	background-color $blue
	background-image none
	border none
	width 15px
	top 27px
	height 15px
	cursor col-resize
.irs-line, .irs-bar
	height 3px
.irs-bar
	background-image none
	border none
	background-color $blue
	
.irs-slider.state_hover, .irs-slider:hover
	background-color $blue
.irs-from
	left 0 !important
.irs-to
	right 0 !important
	left auto !important
.irs-from, .irs-to, .irs-single
	top 1px
.irs
	max-width 100%
	height 49px

.irs-single
	display none
.irs-max
	display none