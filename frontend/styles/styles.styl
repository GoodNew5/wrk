// overrides styles 


$hoverColor = tomato

box()
  content ''
  border 1px #fed95d solid
  border-radius: 3px
  height 30px
  width 30px
  margin-right 10px

boxInside()
  content '\2714'
  position absolute
  left 10px
  opacity 0

radio()
  content ''
  top: 5px
  left 5px
  height 22px
  width: 22px
  background-color #fed95d


  

  
  
  
.checkbox-item
  margin-bottom 15px
.checkbox-item input[type=checkbox]
  display none
.checkbox-item input[type=checkbox]:checked + label:after
  opacity 1
.checkbox-item label, .checkbox-item label:before
  transition: 0.3s all

.checkbox-item label
  display flex
  align-items center
  cursor pointer
  position relative

.checkbox-item label
  &:before
    box()
  
.checkbox-item
  label
    &:after
      boxInside()
  &_radio
    label:before,label:after
      border-radius 50%
    label
      &:after
         radio()

+m($desk)
  .checkbox-item
    &:hover
      label
        color $hoverColor
.tab-links
  display flex

.tab-links
  cursor pointer
  .active
    text-decoration underline

.tab-links__item
  padding 10px


.tab-content__item
  display none

.tab-content 
  .active
    display block


.accordion 
  margin-top 30px
  max-width 800px
  background-color #2c3e50
  padding .1px 0 .1px 0

.accordion__content 
  display none
  padding .1px 20px .1px 20px
  color #fff


.accordion__content.active
  display block


.accordion__btn 
  color #fff
  cursor pointer
  text-transform uppercase
  padding 20px
  
.menu, .menu__sub
	list-style none
.menu
  display: flex
  a
    padding 5px
    display block
  li
    &:hover
      .menu__sub
        opacity 1
        visibility visible

  &__sub
    transition .5s 
    visibility hidden
    opacity 0

