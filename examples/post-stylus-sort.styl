/* before */
.canvas // можно объявлять background-color и color одним свойством
	color black white

/* after */

.canvas {
  color: #000;
  background-color: #fff;
}

/* before */
.container 
	border-bottom-radius: 10px;

/* after */

.container {
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
}


/* before */

.example-1 
	size 100px


.example-2
	max-size 400px 300px

/* after */

.example-1 {
	width: 100px;
	height: 100px;
}

.example-2 {
	max-width: 400px;
	max-height: 300px;
}

// Use a skip token (_) to ignore specific lengths.

/* before */

.example-1
	min-size 1em _ //height

/* after */

.example-1 {
	min-width: 1em;
}